<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:id="@+id/llUserName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/llPassWord"
        app:layout_constraintEnd_toStartOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:qmui_borderColor="@color/blue_2196F3"
        app:qmui_borderWidth="1dp"
        app:qmui_radius="6dp">

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@color/White"
            android:hint="请输入用户名"
            android:textColor="@color/stpi_default_text_color"
            tools:text="用户名" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout
        android:id="@+id/llPassWord"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/llUserName"
        app:layout_constraintStart_toStartOf="@+id/llUserName"
        app:layout_constraintTop_toBottomOf="@+id/llUserName"
        app:qmui_borderColor="@color/blue_2196F3"
        app:qmui_borderWidth="1dp"
        app:qmui_radius="6dp">

        <EditText
            android:id="@+id/etPassWord"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@color/White"
            android:hint="请输入密码"
            android:textColor="@color/stpi_default_text_color"
            tools:text="密码" />
    </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:text="登录"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/llPassWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llUserName"
        app:layout_constraintTop_toTopOf="@+id/llUserName"
        app:qmui_isRadiusAdjustBounds="false"
        app:qmui_radius="6dp" />
</androidx.constraintlayout.widget.ConstraintLayout>